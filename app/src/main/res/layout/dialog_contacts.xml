<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite">


    <ImageView
        android:id="@+id/emailUs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        app:layout_constraintBottom_toTopOf="@+id/tweetUs"
        app:layout_constraintEnd_toStartOf="@+id/whatsAppUs"
        app:layout_constraintStart_toEndOf="@+id/callUs"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:srcCompat="@drawable/ic_email" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/whatsAppUs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/emailUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/emailUs"
        app:layout_constraintTop_toTopOf="@+id/emailUs"
        android:src="@drawable/wtsp" />

    <ImageView
        android:id="@+id/callUs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_phone"
        app:layout_constraintBottom_toBottomOf="@+id/emailUs"
        app:layout_constraintEnd_toStartOf="@+id/emailUs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/emailUs" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/facebookUs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/fbvector"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/tweetUs"
        app:layout_constraintEnd_toStartOf="@+id/tweetUs"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tweetUs" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/tweetUs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:src="@drawable/twitterlogo"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toTopOf="@+id/contactsView"
        app:layout_constraintEnd_toStartOf="@+id/igUs"
        app:layout_constraintStart_toEndOf="@+id/facebookUs"
        app:layout_constraintTop_toBottomOf="@+id/emailUs" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/igUs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="1.5dp"
        app:layout_constraintBottom_toBottomOf="@+id/tweetUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/tweetUs"
        app:layout_constraintTop_toTopOf="@+id/tweetUs"
        android:src="@drawable/iglogo2" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/exo_bold"
        android:text="Get instant help in just a few clicks"
        android:textColor="@color/colorDarkPurple"
        android:textSize="17sp"
        app:layout_constraintBottom_toTopOf="@+id/emailUs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/contactsView"
        android:layout_width="0dp"
        android:layout_height="19dp"
        android:layout_margin="0dp"
        android:background="@color/colorOrange"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/facebookUs"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="cursive"
        android:text="Guaranteed safety and security DM @ 2020"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        app:layout_constraintBottom_toBottomOf="@id/contactsView"
        app:layout_constraintEnd_toEndOf="@id/contactsView"
        app:layout_constraintStart_toStartOf="@id/contactsView"
        app:layout_constraintTop_toTopOf="@id/contactsView" />

</androidx.constraintlayout.widget.ConstraintLayout>