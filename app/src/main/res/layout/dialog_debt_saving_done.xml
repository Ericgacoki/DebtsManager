<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:theme="@style/Material"
    android:background="@color/colorTransparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >

        <View
            android:id="@+id/viewDone"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:background="@color/colorOrange"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Saved  successfully       "
            android:gravity="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="serif"
            android:paddingHorizontal="20dp"
            android:drawableStart="@drawable/ic_done"
            app:layout_constraintBottom_toBottomOf="@+id/viewDone"
            app:layout_constraintEnd_toEndOf="@+id/viewDone"
            app:layout_constraintStart_toStartOf="@+id/viewDone"
            app:layout_constraintTop_toTopOf="@+id/viewDone" />

       <!-- todo add a gif done -->

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/tick_gif"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewDone" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>