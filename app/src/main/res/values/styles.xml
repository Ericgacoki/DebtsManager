<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/exo</item>
    </style>

    <style name="ThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorLightBgBlack</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:textColorHint">@color/colorYellow</item>
        <item name="android:fontFamily">@font/exo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeFab">
        <item name="colorAccent">@color/colorFabTint</item>
    </style>

    <style name="ThemeGreenCalendar">
        <item name="android:colorAccent">#3FD500</item>
        <item name="android:colorPrimary">#3FD500</item>

    </style>

