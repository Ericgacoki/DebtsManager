<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/exo</item>
    </style>

    <style name="ThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
       <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorOrange</item>
        <item name="android:textColorHint">@color/colorYellow</item>
        <item name="android:fontFamily">@font/exo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeFab" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorLightBgBlack</item>
<!--
        <item name="android:background">@color/colorBlack</item>
-->
    </style>
</resources>
